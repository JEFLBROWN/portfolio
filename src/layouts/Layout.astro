---
import "../styles/global.css";
import Footer from "../components/Footer.astro";
import Nav from "../components/Nav.astro";
import About from "../components/About.astro";
import Work from "../components/Work.astro";


interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>

	<body>


		<!-- <div class="grid grid-cols-12 gap-x-4 max-w-screen-lg mx-auto px-4"> -->
			<div class="grid grid-cols-12 gap-x-4 max-w-screen-xl xl:max-w-7xl mx-auto px-6">
			<div class="col-span-1 hidden md:block"></div> <!-- Left Gutter (hidden on small screens) -->
			<div class="col-span-12 md:col-span-10"> 
			  <p class="text-center md:text-left">Centered Content</p>
			  <Work />
			  <Nav />
			  <Footer />
			</div>
			<div class="col-span-1 hidden md:block"></div> <!-- Right Gutter (hidden on small screens) -->
		</div>
	</body>
</html>